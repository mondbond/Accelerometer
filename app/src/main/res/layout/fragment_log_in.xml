<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mond.accelerometer.view.fragments.LogInFragment">

    <include layout="@layout/email_password_form"
        android:id="@+id/include" />

    <LinearLayout
        android:id="@+id/log_in_form"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/log_in_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_sign_in" />

        <TextView
            android:id="@+id/registration_propose_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_registration_propose"/>
    </LinearLayout>

</RelativeLayout>
