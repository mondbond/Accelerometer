<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mond.accelerometer.view.fragments.LogInFragment">

    <include
        android:id="@+id/include"
        layout="@layout/email_password_form" />

    <LinearLayout
        android:id="@+id/ll_log_in"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <Button
            android:id="@+id/btn_log_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_sign_in" />

        <TextView
            android:id="@+id/tv_registration_propose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_registration_propose" />
    </LinearLayout>

</RelativeLayout>
