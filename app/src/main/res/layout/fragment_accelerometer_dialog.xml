<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.mond.accelerometer.view.fragments.AccelerometerDialogFragment">

        <CheckBox
            android:id="@+id/activity_list_is_time_execution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/activity_list_time_execution_text"
            android:layout_alignRight="@+id/activity_list_time_value"
            android:layout_alignEnd="@+id/activity_list_time_value"/>

        <TextView
            android:id="@+id/activity_list_time_execution_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Execute on time : "
            android:layout_below="@+id/activity_list_time_value"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="19dp"/>

        <Button
            android:id="@+id/activity_list_time_execution_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time execution :"
            android:textSize="8sp"
            android:layout_below="@+id/activity_list_is_time_execution"
            android:layout_alignRight="@+id/activity_list_time_execution_text"
            android:layout_alignEnd="@+id/activity_list_time_execution_text"
            android:layout_marginRight="29dp"
            android:layout_marginEnd="29dp"/>

    <TextView
        android:id="@+id/activity_list_time_execution_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dsfdasfdasfdasf"
        android:layout_alignBottom="@+id/activity_list_time_execution_btn"
        android:layout_toRightOf="@+id/activity_list_time_execution_text"
        android:layout_toEndOf="@+id/activity_list_time_execution_text"/>

        <EditText
            android:id="@+id/activity_list_interval_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:textSize="10sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/activity_list_interval_text"
            android:layout_toEndOf="@+id/activity_list_interval_text"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="49dp"/>

        <TextView
            android:id="@+id/activity_list_interval_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interval"
            android:layout_alignTop="@+id/activity_list_interval_value"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <Button
            android:id="@+id/activity_list_start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:layout_alignBaseline="@+id/activity_list_stop_btn"
            android:layout_alignBottom="@+id/activity_list_stop_btn"
            android:layout_toRightOf="@+id/activity_list_stop_btn"
            android:layout_toEndOf="@+id/activity_list_stop_btn"/>

        <Button
            android:id="@+id/activity_list_stop_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:layout_below="@+id/activity_list_time_execution_btn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="35dp"/>

        <TextView
            android:id="@+id/activity_list_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:layout_below="@+id/activity_list_interval_value"
            android:layout_alignRight="@+id/activity_list_interval_text"
            android:layout_alignEnd="@+id/activity_list_interval_text"/>

        <EditText
            android:id="@+id/activity_list_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:textSize="10sp"
            android:layout_below="@+id/activity_list_interval_value"
            android:layout_alignLeft="@+id/activity_list_interval_value"
            android:layout_alignStart="@+id/activity_list_interval_value"/>
</RelativeLayout>

