<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mond.accelerometer.view.activities.ListActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/cardView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <RadioButton
                android:id="@+id/activity_list_is_time_execution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_alignBaseline="@+id/activity_list_time_execution_text"
                android:layout_alignBottom="@+id/activity_list_time_execution_text"
                android:layout_toRightOf="@+id/activity_list_time_execution_text"
                android:layout_toEndOf="@+id/activity_list_time_execution_text"/>

            <TextView
                android:id="@+id/activity_list_time_execution_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/activity_list_time_value"
                android:layout_alignLeft="@+id/activity_list_time_execution_btn"
                android:layout_alignStart="@+id/activity_list_time_execution_btn"
                android:text="Execute on time : "/>

            <Button
                android:id="@+id/activity_list_time_execution_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:text="Time execution :"
                android:textSize="8sp"
                android:layout_alignBaseline="@+id/activity_list_interval_value"
                android:layout_alignBottom="@+id/activity_list_interval_value"
                android:layout_toRightOf="@+id/activity_list_interval_value"
                android:layout_toEndOf="@+id/activity_list_interval_value"/>

            <TextView
                android:id="@+id/activity_list_time_execution_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/activity_list_time_execution_btn"
                android:layout_toRightOf="@+id/activity_list_time_execution_btn"/>

            <EditText
                android:id="@+id/activity_list_interval_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textSize="10sp"
                android:layout_alignTop="@+id/activity_list_interval_text"
                android:layout_toRightOf="@+id/activity_list_interval_text"
                android:layout_toEndOf="@+id/activity_list_interval_text"/>

            <TextView
                android:id="@+id/activity_list_interval_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/interval"
                />

            <Button
                android:id="@+id/activity_list_start_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Start"/>

            <Button
                android:id="@+id/activity_list_stop_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/activity_list_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/activity_list_interval_text"
                android:layout_alignRight="@+id/activity_list_interval_text"
                android:layout_below="@+id/activity_list_interval_text"
                android:layout_marginTop="18dp"
                android:text="@string/time"
                />

            <EditText
                android:id="@+id/activity_list_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/activity_list_interval_value"
                android:layout_alignStart="@+id/activity_list_interval_value"
                android:layout_alignTop="@+id/activity_list_time_text"
                android:ems="10"
                android:inputType="number"
                android:textSize="10sp"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v4.view.ViewPager
        android:id="@+id/list_activity_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.v4.view.ViewPager>

    <!--<FrameLayout-->
        <!--android:id="@+id/list_fragment_container"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_below="@+id/relativeLayout"></FrameLayout>-->

</RelativeLayout>
