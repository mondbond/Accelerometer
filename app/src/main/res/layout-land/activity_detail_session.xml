<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mond.accelerometer.view.activities.DetailSessionActivity">

    <FrameLayout
        android:id="@+id/graph_fragment_container"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:minHeight="200dp">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/accelerometer_data_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/graph_fragment_container"
        android:layout_toEndOf="@+id/graph_fragment_container">
    </FrameLayout>

</RelativeLayout>
