<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/accelerometer_data_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/accelerometer_data_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/accelerometer_data_time"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="11dp"/>

    <TextView
        android:id="@+id/accelerometer_data_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/accelerometer_data_x"
        android:layout_alignStart="@+id/accelerometer_data_x"
        android:layout_below="@+id/accelerometer_data_x"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/accelerometer_data_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/accelerometer_data_y"
        android:layout_alignStart="@+id/accelerometer_data_y"
        android:layout_below="@+id/accelerometer_data_y"
        android:layout_marginTop="10dp"/>

</RelativeLayout>