<?xml version="1.0" encoding="utf-8"?>
<!--todo    no need to copy layout if there is no difference-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <TextView
        android:id="@+id/session_time"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textSize="10sp"/>

    <LinearLayout
        android:id="@+id/accelerometer_data_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/session_time"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/session_time"
        android:layout_toRightOf="@+id/session_time"
        android:orientation="vertical">
    </LinearLayout>

</RelativeLayout>