<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mond.accelerometer.view.activities.ListActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <CheckBox
                android:id="@+id/activity_list_is_time_execution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_list_time_value"
                android:layout_toRightOf="@+id/activity_list_time_execution_btn"
                android:layout_toEndOf="@+id/activity_list_time_execution_btn"/>

            <TextView
                android:id="@+id/activity_list_time_execution_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/activity_list_is_time_execution"
                android:layout_alignBottom="@+id/activity_list_is_time_execution"
                android:layout_toLeftOf="@+id/activity_list_is_time_execution"
                android:layout_toStartOf="@+id/activity_list_is_time_execution"
                android:text="@string/execute_on_time"/>

            <Button
                android:id="@+id/activity_list_time_execution_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/activity_list_time_value"
                android:layout_toRightOf="@+id/activity_list_time_value"
                android:text="Time execution :"
                android:textSize="8sp"/>

            <TextView
                android:id="@+id/activity_list_time_execution_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/activity_list_time_execution_btn"
                android:layout_alignBottom="@+id/activity_list_time_execution_btn"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                android:layout_toEndOf="@+id/activity_list_time_execution_btn"
                android:layout_toRightOf="@+id/activity_list_time_execution_btn"
                />

            <EditText
                android:id="@+id/activity_list_interval_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/activity_list_interval_text"
                android:layout_toEndOf="@+id/activity_list_interval_text"
                android:layout_toRightOf="@+id/activity_list_interval_text"
                android:ems="10"
                android:inputType="number"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/activity_list_interval_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/interval"
                />

            <Button
                android:id="@+id/activity_list_start_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/activity_list_interval_value"
                android:text="Start"/>

            <Button
                android:id="@+id/activity_list_stop_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/activity_list_interval_value"
                android:layout_toLeftOf="@+id/activity_list_time_text"
                android:layout_toStartOf="@+id/activity_list_time_text"
                android:text="Stop"/>

            <TextView
                android:id="@+id/activity_list_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/activity_list_time_value"
                android:layout_toStartOf="@+id/activity_list_time_value"
                android:text="@string/time"
                />

            <EditText
                android:id="@+id/activity_list_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:inputType="number"
                android:textSize="10sp"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/activity_list_list_fragment_container"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cardView">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/activity_list_graph_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/activity_list_list_fragment_container"
        android:layout_toRightOf="@+id/activity_list_list_fragment_container">

    </FrameLayout>

    <!--<FrameLayout-->
        <!--android:id="@+id/list_fragment_container"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_below="@+id/relativeLayout"></FrameLayout>-->

</RelativeLayout>
